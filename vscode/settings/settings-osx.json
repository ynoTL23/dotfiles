{
  // Fonts and Tabs
  "editor.fontFamily": "SFMono Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 12,
  "editor.tabSize": 2,

  // Themes
  "catppuccin.extraBordersEnabled": true,
  "catppuccin.workbenchMode": "flat",
  "workbench.colorTheme": "Catppuccin Mocha",

  // Integrated Terminal
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.stickyScroll.enabled": false,

  // EDITOR
  "editor.lineNumbers": "relative",
  "editor.autoIndent": "full",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    // "source.fixAll.eslint": "always",
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": "active",
  "editor.minimap.maxColumn": 100,
  "editor.quickSuggestions": {
    "comments": false,
    "other": true,
    "strings": false
  },
  "editor.snippetSuggestions": "inline",
  "editor.stickyScroll.enabled": true,
  "editor.suggest.insertMode": "insert",
  "editor.suggest.preview": true,
  "editor.suggest.showStatusBar": true,
  "editor.suggestSelection": "recentlyUsed",
  "editor.tabCompletion": "on",
  "files.exclude": {
    "__mocks__/**": false,
    "__tests__/**": false,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.vscode": true,
    "**/Thumbs.db": true,
    "local/**": false,
    "udf/**": true,
    "dist/**": false,

    // Exclude all @abc packages
    // Exclude all node modules except for:
    // @x
    "node_modules/[^@]*/**": true,
    "node_modules/@x[^y]*/**": true,
    "node_modules/@xy[^z]*/**": true,
    "node_modules/@abc/**": true,

  },
  "files.readonlyInclude": {
    "node_modules/**": true
  },
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.renderGutterMenu": true,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "files.trimTrailingWhitespace": true,
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.renderIndentGuides": "always",
  "search.defaultViewMode": "tree",
  "search.showLineNumbers": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**/bower_components": true,
    "**/*.code-search": true,

    // All test dirs, test and spec files
    "**/test/**": true,
    "**/*.{test,spec}.{ts,tsx,js,jsx}": true,

    // Storybook
    ".storybook": true,
    "**/*.stories.{ts,tsx,js,jsx}": true,
    "**/__stories__/**": true,

    // Cypress
    "cypress": true,

    // Mocks
    "**/__mocks__/**": true,
    "**/mocks/**": true,

    "**/.git": true,
    "**/coverage": true
  },

  // HTML
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "html.autoClosingTags": true,
  "html.autoCreateQuotes": true,
  "html.completion.attributeDefaultValue": "doublequotes",
  "html.format.contentUnformatted": "pre,code,textarea",
  "html.format.enable": true,
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  "html.format.templating": true,
  "html.hover.documentation": true,
  "html.hover.references": true,

  // Javascript Configs
  "javascript.autoClosingTags": true,
  "javascript.format.enable": true,
  "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
  "javascript.format.semicolons": "insert",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.quoteStyle": "double",
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.suggest.enabled": true,
  "javascript.suggestionActions.enabled": true,

  // TypeScript Configs
  "typescript.format.enable": true,
  "typescript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
  "typescript.format.insertSpaceBeforeFunctionParenthesis": false,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.preferences.quoteStyle": "double",
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.suggest.enabled": true,
  "typescript.autoClosingTags": true,
  "typescript.suggest.autoImports": true,
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.showExpandedAbbreviation": "always",
  "emmet.triggerExpansionOnTab": true,

  // Prettier
  "prettier.arrowParens": "avoid",
  "prettier.bracketSameLine": true,
  "prettier.bracketSpacing": true,
  "prettier.configPath": "./prettier.config.js",
  "prettier.enable": true,
  "prettier.endOfLine": "lf",
  "prettier.jsxSingleQuote": true,
  "prettier.printWidth": 100,
  "prettier.semi": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "prettier.useEditorConfig": true,
  "prettier.useTabs": false,

  // ESLint
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.options": {
    "extensions": [".js", ".jsx", ".ts", ".tsx"]
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // Jest
  "jest.runMode": "on-demand",

  // Git
  "git.autofetch": true,
  "git.decorations.enabled": true,

  // GitLens
  "gitlens.currentLine.format": "${author, }${agoOrDate}${' via 'pullRequest}${ â€¢ message|75?}",
  "gitlens.graph.dimMergeCommits": true,
  "gitlens.graph.layout": "editor",
  "gitlens.graph.minimap.enabled": true,
  "gitlens.views.commitDetails.files.layout": "tree",
  "gitlens.views.commits.files.layout": "tree",
  "gitlens.telemetry.enabled": false,
  "gitlens.plusFeatures.enabled": false,
  "gitlens.views.scm.grouped.views": {
    "commits": false,
    "branches": false,
    "remotes": true,
    "stashes": false,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "fileHistory": false,
    "repositories": false,
    "searchAndCompare": false,
    "launchpad": false
  },
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",

  // Other
  "telemetry.enableTelemetry": false,
  "telemetry.telemetryLevel": "off",
  "telemetry.feedback.enabled": false,
  "window.titleBarStyle": "custom", // needed for below #window.commandCenter#
  "window.commandCenter": true,
  "update.mode": "none",
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": true,
  "editor.accessibilitySupport": "off",

  // GitHub Copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.chat.followUps": "always",
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "chat.agent.enabled": true
}
